<%- include partials/header.ejs %>
<script>
    billItemList = []
    function addPerson() {
        var name = document.getElementById("name").value;
        billItemList.push(name)
        console.log(billItemList)
        output = ""
        for (i = 0; i < billItemList.length; i++) {
            output += "<h3>" + billItemList[i] + "</h3>"
        }

        document.getElementById("manipulate").innerHTML = output;
    }
    function fileSelectedChanged(obj) {
        var filePath = obj.value;

        var ext = filePath.substring(filePath.lastIndexOf('.') + 1).toLowerCase();
        if (ext != 'csv') {
            alert('Only files with the file extension CSV are allowed');
        } else {
            document.getElementById('form1').submit();
        }
    }
</script>
<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner"
    style="background-image:url(images/img_bg_1.jpg); height: 100vh;">
    <div class="overlay"></div>
    <div class="fh5co-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>Add Bill</h1>
                        <div class="row animate-box">
                            <div class="col-md-10 col-md-offset-1">
                                <form class="form-inline" method="POST" action="/add_bill">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label for="purpose" class="sr-only">Purpose</label>
                                            <input type="text" class="form-control" id="purpose" name="purpose"
                                                placeholder="Purpose" style="width:50vw" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label for="amount" class="sr-only">Amount</label>
                                            <input type="number" class="form-control" id="amount" name="amount"
                                                placeholder="Amount" style="width:50vw" required>
                                        </div>
                                    </div>
                                    <!-- <div class="col-md-12 col-sm-12">
                                        <div class="col-md-1">
                                            <input type="checkbox" name="entry" id="entry" style="display:inline-block">
                                        </div>
                                        <div class="col-md-3" style="align-content:start">
                                            <h2>Mr. John</h2>
                                        </div>
                                    </div> -->

                                    <div class="col-md-12 col-sm-12" id="manipulate">
                                    </div>

                                    <div class="col-md-12 col-sm-12">
                                        <input type="text" name="name" id="name">
                                        <input type="button" value="Add Contributer" onclick="addPerson()">
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <input type="file" name="bill" id="bill" accept="image/*">
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <button type="submit" class="btn btn-default btn-block"
                                            style="background-color: blueviolet;">Confirm</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-event" class="fh5co-bg" style="background-image:url(images/img_bg_3.jpg); height: 200rem;">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading animate-box">
                <span>Our Special Events</span>
                <h2>Technical Events</h2>
            </div>
        </div>
        <div class="row">
            <div class="display-t">
                <div class="display-tc">
                    <div class="col-md-10 col-md-offset-1">
                        <% 
                        if (stories)
                        for (i=0;i<stories.length;i++) { 
                            stories[i] = stories[i].toJSON()
                            %>
                        <a href="/events/<%= stories[i]._id%>">
                            <div class="col-md-4 col-sm-4 text-center">
                                <div class="event-wrap animate-box">
                                    <h3><%= stories[i].name %></h3>
                                    <div class="event-col">
                                        <i class="icon-clock"></i>
                                        <span><%= stories[i].time %></span>
                                    </div>
                                    <div class="event-col">
                                        <i class="icon-calendar"></i>
                                        <span><%= stories[i].date %></span>
                                    </div>
                                    <p><%= stories[i].desc %></p>
                                    <!-- <p><%= "- "+stories[i].council %></p> -->
                                    <p><%= "Cost "+stories[i].cost + "  Prize "+stories[i].prize%></p>
                                    <p><%= "Points "+stories[i].points %></p>
                                </div>
                            </div>
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

